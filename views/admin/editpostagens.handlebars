<div class="container mt-4" style="padding-top: 90px;">
{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card mb-3">
    <div class="card-body">
        <h4 class="mt-2">Editar Postagem:</h4><br>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria" class=" mt-2">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}" class="form-control">{{nome}}</option>></option>
                {{else}}
                <option value="0" class="form-control">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>

</div>
